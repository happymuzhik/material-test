@import "./../common/vars.styl"

.ma-form-group,
.form-group
    margin: 10px

.ma-form-group
    position: relative


.ma-input
    width: 100%
    max-width: $input-width
    padding: 10px 5px
    border: none
    border-bottom: 1px solid $inactive-color


.ma-input:focus
    outline: none


.ma-input:valid
    border-bottom: 1px solid $active-color


.ma-input~label
    pointer-events: none
    position: absolute
    left: 5px
    top: 10px
    color: $inactive-color


.ma-input:focus~label,
.ma-input:valid~label
    top: -15px
    color: $active-color
    -webkit-transition: top $transition-speed ease
    -moz-transition: top $transition-speed ease
    transition: top $transition-speed ease


.bar
    position: relative
    max-width: $input-width


.bar:before,
.bar:after
    content: ''
    height: 2px
    width: 0
    position: absolute
    top: -1px
    background-color: $active-color
    -webkit-transition: width $transition-speed ease
    -moz-transition: width $transition-speed ease
    transition: width $transition-speed ease


.bar:before
    left: 50%


.bar:after
    right: 50%


.ma-input:focus~.bar:before,
.ma-input:focus~.bar:after
    width: 50%
    
