@import "./../common/vars.styl"

.ma-button
    outline: none
    border: 1px solid $active-color
    background-color: $active-color
    color: #FFF
    cursor: pointer
    text-align: center
    letter-spacing: .5px
    border-radius: 2px
    padding: 0
    height: 36px
    line-height: 36px
    vertical-align: middle
    box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12)
    transition: all 300ms ease
    &:active
        outline: none !important
    &:hover
        background-color: #666
        color: #FFF
    &.outline
        background-color: #FFF
        color: $active-color
        &:hover
            background-color: $active-color
            color: #FFF
        &.no-border
            border: 1px solid #FFF
            background-color: #FFF
            color: $active-color
            &:hover
                border: 1px solid #EEE
                background-color: #EEE
                color: $active-color
    &>.box
        padding: 0 2rem
        overflow: hidden
        user-select: none
        position: relative

.ripple-effect
    pointer-events: none
    background-color: rgba(255, 255, 255, .6)
    width: 100%
    height: 100%
    border-radius: 100%
    position: absolute
    animation-name: ripple
    animation-iteration-count: 1
    animation-duration: 1.2s
    transform: translateX(-50%) translateY(-50%)

@keyframes ripple
    from
        width: 0
        height: 0
        opacity: 1
    
    to
        width: 500px
        height: 500px
        opacity: 0